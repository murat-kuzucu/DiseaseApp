@model RegisterViewModel

@{
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow bg-transparent">
                <div class="card-body p-4">
                    <h1 class="mb-4 text-center fw-bold display-4 text-secondary">Create User</h1>
                    <form asp-action="CreateUser" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        
                        <div class="mb-3 form-group rounded-pill shadow-sm">
                            <label asp-for="UserName" class="form-label fw-bold fs-5 mb-2 text-secondary"></label>
                            <input asp-for="UserName" class="form-control" required />
                            <div class="invalid-feedback">Please enter a username.</div>
                        </div>
                        <div class="mb-3 form-group rounded-pill shadow-sm">
                            <label asp-for="Name" class="form-label fw-bold fs-5 mb-2 text-secondary"></label>
                            <input asp-for="Name" class="form-control" required />
                            <div class="invalid-feedback">Please enter a name.</div>
                        </div>
                        <div class="mb-3 form-group rounded-pill shadow-sm">
                            <label asp-for="Email" class="form-label fw-bold fs-5 mb-2 text-secondary"></label>
                            <input asp-for="Email" class="form-control" required />
                            <div class="invalid-feedback">Please enter a valid email address.</div>
                        </div>
                        <div class="mb-3 form-group rounded-pill shadow-sm">
                            <label asp-for="Password" class="form-label fw-bold fs-5 mb-2 text-secondary"></label>
                            <input asp-for="Password" type="password" class="form-control" required />
                            <div class="invalid-feedback">Please enter a password.</div>
                        </div>
                        <div class="mb-3 form-group rounded-pill shadow-sm">
                            <label asp-for="ConfirmPassword" class="form-label fw-bold fs-5 mb-2 text-secondary"></label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" required />
                            <div class="invalid-feedback">Please confirm your password.</div>
                        </div>
                        <div class="mb-3 form-group">
                            <label class="form-label fw-bold fs-5 mb-2 text-secondary">Is Active?</label>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="isActiveToggle" asp-for="IsActive">
                            </div>
                        </div>
                        <div class="mb-3 form-group rounded-pill shadow-sm">
                            <label asp-for="UserRole" class="form-label fw-bold fs-5 mb-2 text-secondary"></label>
                            <select asp-for="UserRole" class="form-control" required>
                                <option value="Admin">Admin</option>
                                <option value="Researcher">Researcher</option>
                                <option value="User">User</option>
                            </select>
                            <div class="invalid-feedback">Please select a user role.</div>
                        </div>
                        
                        <button type="submit" class="btn btn-primary w-100 tag-position rounded-pill shadow-sm" style="color:black;">Create</button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
