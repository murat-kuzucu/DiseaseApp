@model UserEditViewModel

@{
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow bg-transparent">
                <div class="card-body p-4">
                    <h1 class="mb-4 text-center fw-bold display-4 text-secondary">Edit User</h1>
                    <form asp-action="UserEdit" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="UserId" />

                        <div class="mb-3 form-group rounded-pill shadow-sm">
                            <label asp-for="UserName" class="form-label fw-bold fs-5 mb-2 text-secondary"></label>
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-group rounded-pill shadow-sm">
                            <label asp-for="Name" class="form-label fw-bold fs-5 mb-2 text-secondary"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-group rounded-pill shadow-sm">
                            <label asp-for="Email" class="form-label fw-bold fs-5 mb-2 text-secondary"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-group rounded-pill shadow-sm">
                            <label asp-for="Password" class="form-label fw-bold fs-5 mb-2 text-secondary"></label>
                            <input asp-for="Password" type="password" class="form-control"/>
                        </div>

                        <div class="mb-3 form-group rounded-pill shadow-sm">
                            <label asp-for="ConfirmPassword" class="form-label fw-bold fs-5 mb-2 text-secondary"></label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control"/>
                            <div class="invalid-feedback">Please re enter your password.</div>
                        </div>

                        <div class="mb-3 form-group rounded-pill shadow-sm">
                            <label asp-for="UserRole" class="form-label fw-bold fs-5 mb-2 text-secondary"></label>
                            <select asp-for="UserRole" class="form-control">
                                <option value="Admin">Admin</option>
                                <option value="Researcher">Researcher</option>
                                <option value="User">User</option>
                            </select>
                            <span asp-validation-for="UserRole" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-group">
                            <div class="form-check form-switch">
                                <label asp-for="IsActive" class="form-label fw-bold fs-5 mb-2 text-secondary">IsActive?</label>
                                <input class="form-check-input" type="checkbox" id="IsActive" asp-for="IsActive">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 tag-position rounded-pill shadow-sm" style="color:black;">Update</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .btn-primary:hover {
        background-color: #999999;
        color: #ffff; /* darker shade of primary color */
    }
</style>
