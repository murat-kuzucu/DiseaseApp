@model PostCreateViewModel

@{
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow bg-transparent">
                <div class="card-body p-4">
                    <h1 class="mb-4 text-center fw-bold display-4 text-secondary">Create an Article</h1>
                    <form asp-action="Create" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        

                        <div class="mb-3 form-group rounded-pill shadow-sm">
                            <label asp-for="Title" class="form-label fw-bold fs-5 mb-2 text-secondary"></label>
                            <input asp-for="Title" class="form-control" required />
                            <div class="invalid-feedback">Please enter article title.</div>
                        </div>

                        <div class="mb-3 form-group rounded-pill shadow-sm">
                            <label asp-for="Description" class="form-label fw-bold fs-5 mb-2 text-secondary"></label>
                            <input asp-for="Description" class="form-control" required />
                            <div class="invalid-feedback">Please enter article description.</div>
                        </div>
                        <div class="mb-3 form-group rounded-pill shadow-sm">
                            <label asp-for="Content" class="form-label fw-bold fs-5 mb-2 text-secondary"></label>
                            <textarea asp-for="Content" class="form-control" required></textarea>
                            <div class="invalid-feedback">Please enter your article content.</div>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 tag-position rounded-pill shadow-sm" style="color:black;">Create</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .btn-primary:hover{
        background-color: #999999;
        color: #ffff; /* darker shade of primary color */
    }
</style>

@section Scripts{
    <script src="/lib/tinymce/tinymce.min.js"></script>

    <script>
        tinymce.init({
            selector: '#Content',
        });
    </script>
}