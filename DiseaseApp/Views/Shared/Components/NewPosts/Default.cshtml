@model List<Post>
    @{
        Layout = "_Layout";
    }
    
    <div class="col-lg-12 mb-3">
        <div class="card shadow-sm">
            <div class="card-header text-center" style="background-color: rgba(5, 175, 158, 0.8); color: #ffffff;">
                <h5 class="card-title mb-0">New Articles</h5>
            </div>
            <div class="card-body">
                @if (Model.Count > 0)
                {
                    @foreach (var post in Model)
                    {
                        <div class="mb-3">
                            <h6 class="card-subtitle mb-2">
                                <a href="/posts/details/@post.Url" class="text-decoration-none text-dark">@post.Title</a>
                            </h6>
                        </div>
                        <hr />
                    }
                }
                else
                {
                    <p class="text-muted text-center">No new articles available.</p>
                }
            </div>
        </div>
    </div>
    