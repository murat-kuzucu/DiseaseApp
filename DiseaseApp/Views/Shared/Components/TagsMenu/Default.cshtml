@model List<Tag>

    <div class="col-lg-12 mb-3">
        <div class="card shadow-sm">
            <div class="card-header text-center bg-info text-white">
                <h5 class="card-title mb-0">Categories</h5>
            </div>
            <div class="card-body">
                @if (Model.Count > 0)
                {
                    <ul class="list-inline d-flex flex-wrap justify-content-center gap-2">
                        @foreach (var tag in Model)
                        {
                            <li class="list-inline-item">
                                <a href="/posts/tag/@tag.Url" class="btn btn-outline-primary btn-sm rounded-pill">
                                    @tag.Text
                                </a>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted text-center">No tags available.</p>
                }
            </div>
        </div>
    </div>
    
    <style>
        .card-header.bg-info {
            background-color: #05af9e !important;
            color: #ffffff !important;
        }
        .btn-outline-primary {
            border-color: #05af9e !important;
            color: #05af9e !important;
        }
        .btn-outline-primary:hover {
            background-color: #05af9e !important;
            color: #ffffff !important;
        }
    </style>
    